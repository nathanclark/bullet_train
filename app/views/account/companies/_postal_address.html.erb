<div class="card bg-base-100 shadow-xl mb-5">
  <div class="card-body">

    <%= fields_for "company[postal_addresses_attributes][#{(postal_address.persisted?) ? postal_address.id : Time.now.to_i}]", postal_address do |ff| %>
      <%= ff.hidden_field :id %>
      <%= render 'shared/fields/text_field', form: ff, method: :address_type %>
      <div class="grid grid-cols-1 gap-y gap-x sm:grid-cols-2">
        <div class="sm:col-span-1">
          <%= render 'shared/fields/text_field', form: ff, method: :street1 %>
        </div>
        <div class="sm:col-span-1">
          <%= render 'shared/fields/text_field', form: ff, method: :street2 %>
        </div>
      </div>

      <div class="grid grid-cols-1 gap-y gap-x sm:grid-cols-2">
        <div class="sm:col-span-1">
          <%= render 'shared/fields/text_field', form: ff, method: :city %>
        </div>

        <div class="sm:col-span-1">
          <%= render 'shared/fields/text_field', form: ff, method: :state %>
          <%= render 'shared/fields/text_field', form: ff, method: :zipcode %>
        </div>
      </div>
    <% end %>
  </div>
</div>



