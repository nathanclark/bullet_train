<% company = @company || @company %>
<% context ||= company %>
<% collection ||= :contacts %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% contacts = company.contacts.order(:id) unless has_order?(company.contacts) %>
<% pagy, contacts = pagy(contacts, page_param: :contacts_page) %>

<%= action_model_select_controller do %>
  <%= updates_for context, collection do %>
    <%= render 'account/shared/box', pagy: pagy do |p| %>
      <% p.content_for :title, t(".contexts.#{context.class.name.underscore}.header") %>
      <% p.content_for :description do %>
        <%= t(".contexts.#{context.class.name.underscore}.description#{"_empty" unless contacts.any?}") %>
        <%= render "shared/limits/index", model: contacts.model %>
      <% end %>

      <% p.content_for :table do %>
        <% if contacts.any? %>
          <table class="table">
            <thead>
              <tr>
                <%= render "shared/tables/select_all" %>
                <th><%= t('.fields.contact_type.heading') %></th>
                <th><%= t('.fields.first_name.heading') %></th>
                <th><%= t('.fields.last_name.heading') %></th>
                <th><%= t('.fields.title.heading') %></th>
                <th><%= t('.fields.email.heading') %></th>
                <th><%= t('.fields.fax_number.heading') %></th>
                <th><%= t('.fields.cell_number.heading') %></th>
                <th><%= t('.fields.work_number.heading') %></th>
                <th><%= t('.fields.social_link.heading') %></th>
                <th><%= t('.fields.cloudinary_image.heading') %></th>
                <th><%= t('.fields.company_role.heading') %></th>
                <%# ðŸš… super scaffolding will insert new field headers above this line. %>
                <th><%= t('.fields.created_at.heading') %></th>
                <th class="text-right"></th>
              </tr>
            </thead>
            <tbody>
              <% contacts.each do |contact| %>
                <% with_attribute_settings object: contact do %>
                  <tr data-id="<%= contact.id %>">
                    <%= render "shared/tables/checkbox", object: contact %>
                    <td><%= render 'shared/attributes/option', attribute: :contact_type, url: [:account, contact] %></td>
                    <td><%= render 'shared/attributes/text', attribute: :first_name %></td>
                    <td><%= render 'shared/attributes/text', attribute: :last_name %></td>
                    <td><%= render 'shared/attributes/text', attribute: :title %></td>
                    <td><%= render 'shared/attributes/email', attribute: :email %></td>
                    <td><%= render 'shared/attributes/phone_number', attribute: :fax_number %></td>
                    <td><%= render 'shared/attributes/phone_number', attribute: :cell_number %></td>
                    <td><%= render 'shared/attributes/phone_number', attribute: :work_number %></td>
                    <td><%= render 'shared/attributes/text', attribute: :social_link %></td>
                    <td><%= render 'shared/attributes/image', attribute: :cloudinary_image %></td>
                    <td><%= render 'shared/attributes/text', attribute: :company_role %></td>
                    <%# ðŸš… super scaffolding will insert new fields above this line. %>
                    <td><%= render 'shared/attributes/date_and_time', attribute: :created_at %></td>
                    <td class="buttons">
                      <% unless hide_actions %>
                        <% if can? :edit, contact %>
                          <%= link_to t('.buttons.shorthand.edit'), [:edit, :account, contact], class: 'button-secondary button-smaller' %>
                        <% end %>
                        <% if can? :destroy, contact %>
                          <%= button_to t('.buttons.shorthand.destroy'), [:account, contact], method: :delete, data: { confirm: t('.buttons.confirmations.destroy', model_locales(contact)) }, class: 'button-secondary button-smaller' %>
                        <% end %>
                        <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        <% end %>
      <% end %>

      <% p.content_for :actions do %>
        <% unless hide_actions %>
          <% if context == company %>
            <% if can? :create, Contact.new(company: company) %>
              <%= link_to t('.buttons.new'), [:new, :account, company, :contact], class: "#{first_button_primary(:contact)} new" %>
            <% end %>
          <% end %>

          <%# ðŸš… super scaffolding will insert new targets one parent action model buttons above this line. %>
          <%# ðŸš… super scaffolding will insert new bulk action model buttons above this line. %>
          <%= render "shared/bulk_action_select" %>

          <% unless hide_back %>
            <%= link_to t('global.buttons.back'), [:account, context], class: "#{first_button_primary(:contact)} back" %>
          <% end %>
        <% end %>
      <% end %>

      <% p.content_for :raw_footer do %>
        <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
