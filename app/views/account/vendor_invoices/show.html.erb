<%= render 'account/shared/page' do |p| %>
  <% p.content_for :title, t('.section') %>
  <% p.content_for :body do %>
    <%= updates_for @vendor_invoice do %>
      <%= render 'account/shared/box', divider: true do |p| %>
        <% p.content_for :title, t('.header') %>
        <% p.content_for :description do %>
          <%= t('.description') %>
          <%= t('.manage_description') if can? :manage, @vendor_invoice %>
        <% end %>

        <% p.content_for :body do %>
          <% with_attribute_settings object: @vendor_invoice, strategy: :label do %>
            <%= render 'shared/attributes/text', attribute: :invoice_type %>
            <%= render 'shared/attributes/text', attribute: :invoice_total %>
            <%= render 'shared/attributes/text', attribute: :reference_number %>
            <%= render 'shared/attributes/text', attribute: :invoice_number %>
            <%= render 'shared/attributes/date', attribute: :invoice_date %>
            <%= render 'shared/attributes/date', attribute: :gl_posting_date %>
            <%= render 'shared/attributes/text', attribute: :discount_total %>
            <%= render 'shared/attributes/date', attribute: :discount_expiration_date %>
            <%# ðŸš… super scaffolding will insert new fields above this line. %>
          <% end %>
        <% end %>

        <% p.content_for :actions do %>
          <%= link_to t('.buttons.edit'), [:edit, :account, @vendor_invoice], class: first_button_primary if can? :edit, @vendor_invoice %>
          <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
          <%= button_to t('.buttons.destroy'), [:account, @vendor_invoice], method: :delete, class: first_button_primary, data: { confirm: t('.buttons.confirmations.destroy', model_locales(@vendor_invoice)) } if can? :destroy, @vendor_invoice %>
          <%= link_to t('global.buttons.back'), [:account, @vendor, :vendor_invoices], class: first_button_primary %>
        <% end %>

        <% p.content_for :raw_footer do %>
          <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
        <% end %>
      <% end %>
    <% end %>

    <%# ðŸš… super scaffolding will insert new children above this line. %>
  <% end %>
<% end %>
