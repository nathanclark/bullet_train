<%= render 'account/shared/page' do |p| %>
  <% p.content_for :title, t('.section') %>
  <% p.content_for :body do %>
    <%= updates_for @payroll_run do %>
      <%= render 'account/shared/box', divider: true do |p| %>
        <% p.content_for :title, 'Payroll Run' %>
        <% p.content_for :description do %>
          <%= t('.description') %>
          <%= t('.manage_description') if can? :manage, @payroll_run %>
        <% end %>

        <% p.content_for :body do %>
          <% with_attribute_settings object: @payroll_run, strategy: :label do %>
            <%= render 'shared/attributes/date', attribute: :schedule %>
            <%= render 'shared/attributes/text', attribute: :employees_paid %>
            <%= render 'shared/attributes/date', attribute: :check_date %>
            <%= render 'shared/attributes/date', attribute: :pay_date %>
            <%# ðŸš… super scaffolding will insert new fields above this line. %>
          <% end %>
        <% end %>

        <% p.content_for :actions do %>
          <%= link_to t('.buttons.edit'), [:edit, :account, @payroll_run], class: first_button_primary if can? :edit, @payroll_run %>
          <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
          <%= button_to t('.buttons.destroy'), [:account, @payroll_run], method: :delete, class: first_button_primary, data: { confirm: t('.buttons.confirmations.destroy', model_locales(@payroll_run)) } if can? :destroy, @payroll_run %>
          <%= link_to t('global.buttons.back'), [:account, @company, :payroll_runs], class: first_button_primary %>
        <% end %>

        <% p.content_for :raw_footer do %>
          <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
        <% end %>
      <% end %>
    <% end %>

    <%# ðŸš… super scaffolding will insert new children above this line. %>
  <% end %>
<% end %>
