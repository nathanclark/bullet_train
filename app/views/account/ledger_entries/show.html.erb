<%= render 'account/shared/page' do |p| %>
  <% p.content_for :title, t('.section') %>
  <% p.content_for :body do %>
    <%= updates_for @ledger_entry do %>
      <%= render 'account/shared/box', divider: true do |p| %>
        <% p.content_for :title, t('.header') %>
        <% p.content_for :description do %>
          <%= t('.description') %>
          <%= t('.manage_description') if can? :manage, @ledger_entry %>
        <% end %>

        <% p.content_for :body do %>
          <% with_attribute_settings object: @ledger_entry, strategy: :label do %>
            <%= render 'shared/attributes/date', attribute: :post_date %>
            <%= render 'shared/attributes/option', attribute: :status %>
            <%= render 'shared/attributes/html', attribute: :note %>
            <%= render 'shared/attributes/option', attribute: :source_type %>
            <%= render 'shared/attributes/option', attribute: :fiscal_period %>
            <%# ðŸš… super scaffolding will insert new fields above this line. %>
          <% end %>
        <% end %>

        <% p.content_for :actions do %>
          <%= link_to t('.buttons.edit'), [:edit, :account, @ledger_entry], class: first_button_primary if can? :edit, @ledger_entry %>
          <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
          <%= button_to t('.buttons.destroy'), [:account, @ledger_entry], method: :delete, class: first_button_primary, data: { confirm: t('.buttons.confirmations.destroy', model_locales(@ledger_entry)) } if can? :destroy, @ledger_entry %>
          <%= link_to t('global.buttons.back'), [:account, @company, :ledger_entries], class: first_button_primary %>
        <% end %>

        <% p.content_for :raw_footer do %>
          <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
        <% end %>
      <% end %>
    <% end %>

    <%= render 'account/ledger_entry_details/index', ledger_entry_details: @ledger_entry.ledger_entry_details, hide_back: true %>
    <%# ðŸš… super scaffolding will insert new children above this line. %>
  <% end %>
<% end %>
