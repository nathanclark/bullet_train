<% company = @company || @company %>
<% context ||= company %>
<% collection ||= :ledger_entries %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% ledger_entries = ledger_entries.order(:id) unless has_order?(ledger_entries) %>
<% pagy, ledger_entries = pagy(ledger_entries, page_param: :ledger_entries_page) %>

<%= action_model_select_controller do %>
  <%= updates_for context, collection do %>
    <%= render 'account/shared/box', pagy: pagy do |p| %>
      <% p.content_for :title, t(".contexts.#{context.class.name.underscore}.header") %>
      <% p.content_for :description do %>
        <%= t(".contexts.#{context.class.name.underscore}.description#{"_empty" unless ledger_entries.any?}") %>
        <%= render "shared/limits/index", model: ledger_entries.model %>
      <% end %>

      <% p.content_for :table do %>
        <% if ledger_entries.any? %>

          <div data-controller="ledger-entries">
          <table class="table">
            <thead>
              <tr>
                <%= render "shared/tables/select_all" %>
                <th><%= t('.fields.post_date.heading') %></th>
                <th><%= t('.fields.status.heading') %></th>
                <%# ðŸš… super scaffolding will insert new field headers above this line. %>
                <th><%= t('.fields.created_at.heading') %></th>
                <th class="text-right"></th>
              </tr>
            </thead>
            <tbody>
              <% ledger_entries.each do |ledger_entry| %>
                <% with_attribute_settings object: ledger_entry do %>
                  <tr data-id="<%= ledger_entry.id %>">
                    <%= render "shared/tables/checkbox", object: ledger_entry %>
                    <td><%= render 'shared/attributes/date', attribute: :post_date, url: [:account, ledger_entry] %></td>
                    <td><%= render 'shared/attributes/option', attribute: :status %></td>
                    <%# ðŸš… super scaffolding will insert new fields above this line. %>
                    <td><%= render 'shared/attributes/date_and_time', attribute: :created_at %></td>
                    <td class="buttons">
                      <% unless hide_actions %>
                        <% if can? :edit, ledger_entry %>
                          <%= link_to t('.buttons.shorthand.edit'), [:edit, :account, ledger_entry], class: 'button-secondary button-smaller' %>
                        <% end %>
                        <% if can? :destroy, ledger_entry %>
                          <%= button_to t('.buttons.shorthand.destroy'), [:account, ledger_entry], method: :delete, data: { confirm: t('.buttons.confirmations.destroy', model_locales(ledger_entry)) }, class: 'button-secondary button-smaller' %>
                        <% end %>
                        <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
          </div>
        <% end %>
      <% end %>

      <% p.content_for :actions do %>
        <% unless hide_actions %>
          <% if context == company %>
            <% if can? :create, LedgerEntry.new(company: company) %>
              <%= link_to t('.buttons.new'), [:new, :account, company, :ledger_entry], class: "#{first_button_primary(:ledger_entry)} new" %>
            <% end %>
          <% end %>

          <%# ðŸš… super scaffolding will insert new targets one parent action model buttons above this line. %>
          <%# ðŸš… super scaffolding will insert new bulk action model buttons above this line. %>
          <%= render "shared/bulk_action_select" %>

          <% unless hide_back %>
            <%= link_to t('global.buttons.back'), [:account, context], class: "#{first_button_primary(:ledger_entry)} back" %>
          <% end %>
        <% end %>
      <% end %>

      <% p.content_for :raw_footer do %>
        <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
