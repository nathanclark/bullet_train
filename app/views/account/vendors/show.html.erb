<%= render 'account/shared/page' do |p| %>
  <% p.content_for :title, t('.section') %>
  <% p.content_for :body do %>
    <%= updates_for @vendor do %>
      <%= render 'account/shared/box', divider: true do |p| %>
        <% p.content_for :title, t('.header') %>
        <% p.content_for :description do %>
          <%= t('.description') %>
          <%= t('.manage_description') if can? :manage, @vendor %>
        <% end %>

        <% p.content_for :body do %>
          <% with_attribute_settings object: @vendor, strategy: :label do %>
            <%= render 'shared/attributes/text', attribute: :name %>
            <%= render 'shared/attributes/text', attribute: :vendor_number %>
            <%= render 'shared/attributes/option', attribute: :is_payee %>
            <%= render 'shared/attributes/belongs_to', attribute: :ledger_account %>
            <%= render 'shared/attributes/text', attribute: :address1 %>
            <%= render 'shared/attributes/text', attribute: :address2 %>
            <%= render 'shared/attributes/text', attribute: :city %>
            <%= render 'shared/attributes/text', attribute: :region %>
            <%= render 'shared/attributes/text', attribute: :zip_code %>
            <%= render 'shared/attributes/text', attribute: :phone_number %>
            <%# ðŸš… super scaffolding will insert new fields above this line. %>
          <% end %>
        <% end %>

        <% p.content_for :actions do %>
          <%= link_to t('.buttons.edit'), [:edit, :account, @vendor], class: first_button_primary if can? :edit, @vendor %>
          <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
          <%= button_to t('.buttons.destroy'), [:account, @vendor], method: :delete, class: first_button_primary, data: { confirm: t('.buttons.confirmations.destroy', model_locales(@vendor)) } if can? :destroy, @vendor %>
          <%= link_to t('global.buttons.back'), [:account, @company, :vendors], class: first_button_primary %>
        <% end %>

        <% p.content_for :raw_footer do %>
          <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
        <% end %>
      <% end %>
    <% end %>

    <%= render 'account/vendor_invoices/index', vendor_invoices: @vendor.vendor_invoices, hide_back: true %>
    <%# ðŸš… super scaffolding will insert new children above this line. %>
  <% end %>
<% end %>
