<%= render 'account/shared/page' do |p| %>
  <% p.content_for :title, t('.section') %>
  <% p.content_for :body do %>
    <%= updates_for @employee do %>
      <%= render 'account/shared/box', divider: true do |p| %>
        <% p.content_for :title, t('.header') %>
        <% p.content_for :description do %>
          <%= t('.description') %>
          <%= t('.manage_description') if can? :manage, @employee %>
        <% end %>

        <% p.content_for :body do %>
          <% with_attribute_settings object: @employee, strategy: :label do %>
            <%= render 'shared/attributes/text', attribute: :employee_number %>
            <%= render 'shared/attributes/text', attribute: :employee_status %>
            <%= render 'shared/attributes/text', attribute: :first_name %>
            <%= render 'shared/attributes/text', attribute: :middle_name %>
            <%= render 'shared/attributes/text', attribute: :last_name %>
            <%= render 'shared/attributes/text', attribute: :address1 %>
            <%= render 'shared/attributes/text', attribute: :address2 %>
            <%= render 'shared/attributes/text', attribute: :city %>
            <%= render 'shared/attributes/text', attribute: :region_state %>
            <%= render 'shared/attributes/text', attribute: :phone_number %>
            <%= render 'shared/attributes/option', attribute: :employee_department %>
            <%= render 'shared/attributes/date', attribute: :hire_date %>
            <%= render 'shared/attributes/date', attribute: :termination %>
            <%= render 'shared/attributes/option', attribute: :payroll_schedule %>
            <%= render 'shared/attributes/option', attribute: :payroll_federal_filing_status %>
            <%= render 'shared/attributes/option', attribute: :expense_ledger_account %>
            <%= render 'shared/attributes/option', attribute: :payroll_federal_withholding_allowance %>
            <%= render 'shared/attributes/text', attribute: :payroll_federal_withholding_amount %>
            <%= render 'shared/attributes/text', attribute: :personal_time_balance %>
            <%= render 'shared/attributes/text', attribute: :vacation_time_balance %>
            <%= render 'shared/attributes/text', attribute: :sick_leave_balance %>
            <%= render 'shared/attributes/date', attribute: :compensation_increase_date %>
            <%= render 'shared/attributes/date', attribute: :next_compensation_increase_date %>
            <%= render 'shared/attributes/text', attribute: :marital_tax_status %>
            <%= render 'shared/attributes/html', attribute: :notes %>
            <%# ðŸš… super scaffolding will insert new fields above this line. %>
          <% end %>
        <% end %>

        <% p.content_for :actions do %>
          <%= link_to t('.buttons.edit'), [:edit, :account, @employee], class: first_button_primary if can? :edit, @employee %>
          <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
          <%= button_to t('.buttons.destroy'), [:account, @employee], method: :delete, class: first_button_primary, data: { confirm: t('.buttons.confirmations.destroy', model_locales(@employee)) } if can? :destroy, @employee %>
          <%= link_to t('global.buttons.back'), [:account, @company, :employees], class: first_button_primary %>
        <% end %>

        <% p.content_for :raw_footer do %>
          <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
        <% end %>
      <% end %>
    <% end %>

    <%# ðŸš… super scaffolding will insert new children above this line. %>
  <% end %>
<% end %>
